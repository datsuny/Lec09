<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/bt_public_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_public_key" />

    <EditText
        android:id="@+id/et_public_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A8EAAB"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:lines="5" />

    <Button
        android:id="@+id/bt_private_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_private_key" />

    <EditText
        android:id="@+id/et_private_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3C9C9"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:lines="5" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white" />

    <EditText
        android:id="@+id/et_plain_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CEBAF3"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:lines="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_encode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bt_encode_text" />

        <Button
            android:id="@+id/bt_dencode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bt_dencode_text" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_code_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0D8F8"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:lines="10" />
</LinearLayout>